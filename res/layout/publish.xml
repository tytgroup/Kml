<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/white"
            android:gravity="center">

            <ImageButton
                android:id="@+id/image_goods"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/imagebutton"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
            
       </RelativeLayout>
       <TextView
           android:id="@+id/txt_advice"
           android:layout_width="fill_parent"
           android:layout_height="20dip"
           android:gravity="center_vertical"
           android:textColor="@color/lightblack"
           android:layout_marginLeft="25dip"
           android:textSize="@dimen/text_size_12"
           android:text="说明：除了照片和描述信息，其它必填"
           />
        <LinearLayout style="@style/LinearLayout_bg_white" >

            <TextView
                style="@style/textview_style1"
                android:text="商品名称：" />

            <EditText
                android:id="@+id/gname"
                style="@style/EditText_style"
                android:layout_marginLeft="20dp"
                android:hint="请输入名称" />
        </LinearLayout>

        <ImageView
            style="@style/line"
            android:contentDescription="@string/app_name" />

        <LinearLayout style="@style/LinearLayout_bg_white" >

            <TextView
                style="@style/textview_style1"
                android:text="选择分类：" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_bg_white"
            android:layout_marginTop="10dp" >

            <TextView
                style="@style/textview_style1"
                android:text="商品单价：" />

            <EditText
                android:id="@+id/price"
                style="@style/EditText_style"
                android:layout_marginLeft="20dp"
                android:hint="请输入价格"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <ImageView
            style="@style/line"
            android:contentDescription="@string/app_name" />

        <LinearLayout style="@style/LinearLayout_bg_white" >

            <TextView
                style="@style/textview_style1"
                android:text="商品数量：" />

            <EditText
                android:id="@+id/num"
                style="@style/EditText_style"
                android:layout_marginLeft="20dp"
                android:hint="请输入数量"
                android:inputType="number" />
        </LinearLayout>

        <ImageView
            style="@style/line"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="@color/white" >

            <EditText
                android:id="@+id/gddecribe"
                style="@style/EditText_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|left"
                android:hint="在这里描述商品信息"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <ImageView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical" 
            android:visibility="gone">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="短信提醒业务（需积分）"
                android:textColor="@color/lightblack" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/cfpub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_style"
            android:text="确认发布"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</ScrollView>