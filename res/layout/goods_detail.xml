<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/system_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gdimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/img1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="发布时间："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/gtime"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@id/time"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/text_size_12" />

                <ImageButton
                    android:id="@+id/favorbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/favorbutton" />

                <TextView
                    android:id="@+id/txt_favor"
                    android:layout_width="70dip"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@id/favorbutton"
                    android:gravity="center_vertical"
                    android:text="点击收藏"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/gdname"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="单价："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/gdprice"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="数量："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/gnum"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="卖家留言："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/gddescribe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip"
                    android:layout_marginBottom="15dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="申请数量："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17" />

                <EditText
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="请输入个数"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <Button
                android:id="@+id/cfap"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="申请交易"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>