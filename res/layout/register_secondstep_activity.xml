<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background_color"
    android:orientation="vertical" >
    
    <TextView
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/text_size_10"
                android:text="说明：学生证照建议上传，用以确实您的身份（可不上传）"/>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dip" 
                android:background="@color/white"  
                android:gravity="center_vertical" 
                android:orientation="horizontal"> 

                <ImageButton
                    android:id="@+id/image_tx"
                    android:layout_width="70dp"
                    android:layout_height="70dp" 
                    android:layout_marginLeft="25dip" 
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
                <Button
                    android:id="@+id/btn_submittx"
                    android:layout_height="40dip"
                    android:layout_width="140dip"
                    android:layout_marginLeft="30dip"
                    android:background="@drawable/button"
                    android:text="上传头像"
                    android:textColor="@color/white"/>
            </LinearLayout>
        <ImageView
        style="@style/line"
        android:contentDescription="@string/app_name" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_xsz"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dip" 
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
                <Button
                    android:id="@+id/btn_submitxsz"
                    android:layout_height="40dip"
                    android:layout_width="140dip"
                    android:layout_marginLeft="30dip"
                    android:background="@drawable/button"
                    android:text="上传学生证照片"
                    android:textColor="@color/white"/>
            </LinearLayout>
            
            <Button
        android:id="@+id/btn_nextstep"
        style="@style/Button_style2"
        android:layout_width="250dp"
        android:layout_marginTop="25dp"
        android:text="下一步" />
</LinearLayout>
