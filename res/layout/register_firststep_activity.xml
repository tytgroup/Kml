<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_background_color"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/LinearLayout_bg_white"
        android:layout_marginTop="10dp" >

        <TextView
            style="@style/textview_style1"
            android:text="昵称:" />

        <EditText
            android:id="@+id/usrname"
            style="@style/EditText_style"
            android:layout_marginLeft="20dp"
            android:hint="请输入昵称" />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:contentDescription="@string/app_name" />

    <LinearLayout style="@style/LinearLayout_bg_white" >

        <TextView
            style="@style/textview_style1"
            android:text="学号:" />

        <EditText
            android:id="@+id/stunum"
            style="@style/EditText_style"
            android:layout_marginLeft="20dp"
            android:hint="请输入学号" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_bg_white"
        android:layout_marginTop="10dp" >

        <TextView
            style="@style/textview_style1"
            android:text="输入密码：" />

        <EditText
            android:id="@+id/usrpsw"
            style="@style/EditText_style"
            android:layout_marginLeft="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <ImageView
        style="@style/line"
        android:contentDescription="@string/app_name" />

    <LinearLayout style="@style/LinearLayout_bg_white" >

        <TextView
            style="@style/textview_style1"
            android:text="确认密码：" />

        <EditText
            android:id="@+id/usrpsw2"
            style="@style/EditText_style"
            android:layout_marginLeft="20dp"
            android:hint="请确认密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_bg_white"
        android:layout_marginTop="10dp" >

        <TextView
            style="@style/textview_style1"
            android:text="手机号：" />

        <EditText
            android:id="@+id/usrphone"
            style="@style/EditText_style"
            android:layout_marginLeft="20dp"
            android:hint="请输入手机号"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_nextstep"
        style="@style/Button_style2"
        android:layout_width="250dp"
        android:layout_marginTop="25dp"
        android:text="下一步" />

</LinearLayout>